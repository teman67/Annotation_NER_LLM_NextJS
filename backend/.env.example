# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Security
SECRET_KEY=your_jwt_secret_key_here_generate_a_strong_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cost Settings (per 1K tokens)
OPENAI_GPT4_INPUT_COST=0.01
OPENAI_GPT4_OUTPUT_COST=0.03
OPENAI_GPT35_INPUT_COST=0.0015
OPENAI_GPT35_OUTPUT_COST=0.002
CLAUDE_INPUT_COST=0.008
CLAUDE_OUTPUT_COST=0.024
